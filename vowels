# hometask
 import java.util.Scanner;
 
 public class VowelChecker {
     public static void main(String[] args) {
         // Create scanner object for user input
         Scanner scanner = new Scanner(System.in);
         
         // Prompt user for input
         System.out.print("Enter a character: ");
         char ch = scanner.next().charAt(0);  // Read the first character
         
         // Check whether the character is a vowel using a switch statement
         switch(ch) {
             case 'a':
             case 'e':
             case 'i':
             case 'o':
             case 'u':
                 System.out.println(ch + " is a lowercase vowel.");
                 break;
             case 'A':
             case 'E':
             case 'I':
             case 'O':
             case 'U':
                 System.out.println(ch + " is an uppercase vowel.");
                 break;
             default:
                 System.out.println(ch + " is not a vowel.");
                 break;
         }
         
         // Close scanner
         scanner.close();
     }
 }
